<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include
        android:id="@+id/actionbar_radio03"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        layout="@layout/pubic_title" />
    <ListView
        android:layout_below="@+id/actionbar_radio03"
        android:id="@+id/lv_radio03"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_radio03"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/dialpad_bg"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_radio03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_call"/>
    </RelativeLayout>
</RelativeLayout>