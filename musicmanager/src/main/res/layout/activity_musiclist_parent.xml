<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#D4D4C8"
    android:layout_height="65dp">
    <ImageView
        android:id="@+id/iv_picture_list"
        android:layout_gravity="center"
        android:layout_width="65dp"
        android:layout_height="65dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_name_list"
            android:layout_width="wrap_content"
            android:text="dfd"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_singer_list"
            android:layout_width="wrap_content"
            android:text="22"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_marginEnd="80dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@+id/tv_name_list"
            android:layout_alignStart="@+id/tv_name_list"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_author_list"
                android:textColor="#000000"
                android:text="10"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_composer_list"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="df"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_durationtime_list"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="11"

                android:gravity="end"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>